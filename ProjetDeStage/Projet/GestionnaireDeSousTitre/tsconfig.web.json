{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "electron.d.ts",
    "src/main/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators":true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "types": ["electron"],
    "esModuleInterop": true,
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
